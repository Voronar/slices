{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "tslint-config-airbnb"],
  "rules": {
    "import-name": false,
    "ordered-imports": false,
    "member-access": false,
    "no-console": false,
    "variable-name": [true,
      "allow-pascal-case"
    ],
    "object-literal-sort-keys": false,
    "align": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
